SELECT * FROM customers;
SELECT first_name, last_name FROM employees;
SELECT COUNT(*) FROM orders;
SELECT AVG(price) FROM products;
SELECT MAX(hire_date) FROM employees;
SELECT MIN(birthdate) FROM customers;
SELECT SUM(salary) FROM employees;
SELECT * FROM products WHERE price > 100;
SELECT * FROM orders WHERE order_date >= '2022-01-01';
SELECT * FROM customers WHERE country='USA' AND city='New York';
SELECT * FROM employees WHERE salary BETWEEN 50000 AND 100000;
SELECT * FROM products WHERE name LIKE '%book%';
SELECT * FROM employees WHERE first_name='John' OR last_name='Smith';
SELECT * FROM customers WHERE customer_id IN (1,2,3);
SELECT * FROM products WHERE category NOT IN ('Electronics','Clothing');
SELECT * FROM employees ORDER BY salary DESC;
SELECT * FROM customers ORDER BY last_name, first_name ASC;
SELECT first_name, last_name FROM employees GROUP BY department;
SELECT category, SUM(price) FROM products GROUP BY category;
SELECT COUNT(DISTINCT country) FROM customers;
SELECT * FROM products WHERE price=(SELECT MAX(price) FROM products);
SELECT * FROM employees WHERE department=(SELECT department FROM employees WHERE employee_id=1);
SELECT * FROM orders WHERE customer_id=(SELECT customer_id FROM customers WHERE last_name='Smith');
SELECT COUNT(*) FROM orders WHERE order_date BETWEEN '2022-01-01' AND '2022-12-31';
SELECT * FROM products WHERE name='Book' UNION SELECT * FROM products WHERE price=100;
UPDATE customers SET city='Los Angeles' WHERE customer_id=1;
DELETE FROM products WHERE price < 50;
